<% title(@actor.fullname) %>
<section class="actor">
<div class="row">
  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3 ">
    <div class="image">
      <%= image_tag(@actor.image, class:"img img-responsive") %>
    </div>
    <ul class="admin-actions">
      <li>
        <%= link_to "Edit Actor", edit_admin_actor_path(@actor), class:"edit" %>
      </li>
      <li>
        <%= link_to "Delete Actor", admin_actor_path(@actor), method: :delete, class:"delete",
            data:{confirm:"Are sure that you want to delete this actor?"}
        %>
      </li>
    </ul>
  </div>
  <div class="col-sm-8 col-md-9 col-lg-9">
    <h1 class="fullname"><%= @actor.fullname %></h1>
    <div class="bio">
      <%= @actor.bio.html_safe %>
    </div>
  </div>
</div>
</section>
