<%= simple_form_for([:admin, network]) do |f| %>
  <%= f.input :name %>
  <%= f.input :bio %>
  <%= f.input :overview %>
  <%= f.association :country %>
  <%= f.input :logo, as: :file %>
  <%= f.button :submit, class:"btn btn-primary" %>
<% end %>

<!-- Initialize the editor. -->
<script>
  $(function() {
    $('#network_bio').froalaEditor()
  });
</script>
