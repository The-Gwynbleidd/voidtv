<% title(@country.name) %>
<section class="actor">
  <div class="name-actions">
    <h1><%= @country.name %></h1>
    <ul class="admin-actions">
      <li>
        <%= link_to "Edit Country", edit_admin_country_path(@country), class:"edit" %>
      </li>
      <li>
        <%= link_to "Delete Country", admin_country_path(@country), method: :delete, class:"delete",
            data:{confirm:"Are sure that you want to delete this country?"}
        %>
      </li>
    </ul>
  </div>
</section>
