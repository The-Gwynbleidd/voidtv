<% title(@network.name) %>
<section id="tv-network">
  <div class="name-actions">
    <h1><%= @network.name %></h1>
    <ul class="admin-actions">
      <li>
        <%= link_to "Edit Network", edit_network_path(@network), class:"edit" %>
      </li>
      <li>
        <%= link_to "Delete Network", network_path(@network), method: :delete,
                                                                class:"delete",
            data:{confirm:"Are you sure that you want to delete this network?"} %>
      </li>
    </ul>
  </div>

  <div class="row">
    <div class="bio col-xs-12 col-sm-10 col-md-9 col-lg-8">
      <h2>Bio</h2>
      <% unless @network.bio.empty? %>
        <%= @network.bio.html_safe %>
      <% end %>
    </div>
    <div class="sidebar col-xs-12 col-sm-2 col-md-3 col-lg-4">
      <%= image_tag @network.logo, class:"img img-responsive" %>
    </div>
  </div>
</section>
